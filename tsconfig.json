{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["dom", "es2015"],
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "build",
        "strict": true,
        "strictNullChecks": false,
        "declaration": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "removeComments": false
    },
    "exclude": [
        "build/",
        "node_modules/",
        "src/__mocks__/",
        "integration-test-data/",
        "src/**/*.test.ts",
        "scripts/"
    ]
}
