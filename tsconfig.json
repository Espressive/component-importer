{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["es6"],
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "build",
        "strict": true,
        "strictNullChecks": false,
        "declaration": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "exclude": [
       "build/",
        "node_modules/",
        "src/__mocks__/",
        "design-systems/"
    ]
}
